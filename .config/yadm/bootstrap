#/bin/bash

# Install Stuff
echo "Installing Core Dev Tools"
sudo zypper ref
sudo zypper install -t pattern devel_basis
sudo zypper in \
    ripgrep \
    ripgrep-bash-completion \
    bat \
    neovim \
    python2-neovim \
    python3-neovim \
    exa \
    ruby \
    python \
    python3 \
    tmux

# Install fzf
git clone --depth 1 https://github.com/junegunn/fzf.git ~/.fzf
~/.fzf/install --all
